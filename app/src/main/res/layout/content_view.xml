<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_x="1dp"
        android:layout_y="0dp"
        android:background="@android:color/holo_blue_bright">
        <EditText
            android:layout_width="184dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="INCOME"
            android:id="@+id/txtIn"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/txtOut"
            android:layout_alignStart="@+id/txtOut"
            android:editable="false"
            android:enabled="true"
            android:clickable="true" />

        <EditText
            android:layout_width="184dp"
            android:layout_height="47dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="OUTCOME"
            android:id="@+id/txtOut"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:editable="true"
            android:focusable="true" />

        <EditText
            android:layout_width="184dp"
            android:layout_height="57dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="BALANCE : VAL"
            android:id="@+id/txtVal"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignBaseline="@+id/btnHitung"
            android:layout_alignBottom="@+id/btnHitung"
            android:layout_toRightOf="@+id/btnHitung"
            android:layout_toEndOf="@+id/btnHitung"
            android:enabled="false"
            android:editable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHitung"
            android:layout_column="21"
            android:onClick="btnHitungClicked"
            android:background="@android:drawable/btn_minus"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_x="-3dp"
        android:layout_y="231dp"
        android:background="@android:color/holo_blue_dark">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/no1"
                android:onClick="btn1Clicked"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/no2"
                android:onClick="btn2Clicked"
                android:layout_column="2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/no3"
                android:onClick="btn3Clicked"
                android:layout_column="3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:id="@+id/btnClr"
                android:onClick="btnClrClicked"
                android:layout_column="7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/no4"
                android:onClick="btn4Clicked"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/no5"
                android:onClick="btn5Clicked"
                android:layout_column="2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/no6"
                android:onClick="btn6Clicked"
                android:layout_column="3" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Del"
                android:id="@+id/btnDel"
                android:onClick="btnDelClicked"
                android:layout_column="7" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/no7"
                android:onClick="btn7Clicked"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/no8"
                android:onClick="btn8Clicked"
                android:layout_column="2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/no9"
                android:onClick="btn9Clicked"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/no0"
                android:onClick="btn0Clicked"
                android:layout_column="2" />
        </TableRow>
    </TableLayout>

</AbsoluteLayout>